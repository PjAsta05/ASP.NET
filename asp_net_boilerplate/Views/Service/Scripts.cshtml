<script>
    $(document).ready(function () {
        initTable();
    });

    function initTable() {
        var table = $('#serviceTable').DataTable({
             "processing": true,
             "serverSide": true,
             "bDestroy": true,
             "orderMulti": false,
             "pageLength": 10,
             "bInfo": true,
             "lengthChange": true,
             "searching": true,
             "ajax": {
                 "url": "@Url.Action("LoadService")",
                 "type": "POST",
             },
             "columns": [
                 { render: function (data, type, row, meta) { return meta.row + 1; }, orderable: false },
                 { data: "name", orderable: false},
                 { data: "description", orderable: false },
                 { data: "action", orderable: false }
             ],
         });
    };

    function reloadTable() {
        $('#serviceTable').DataTable().ajax.reload(null, false);
    }

    function ShowData(service_type_id){
        $.get('@Url.Action("Get")', { service_type_id: service_type_id }, function(data){
            var tbody = $('#detailTable tbody');
            tbody.empty();

            var index = 1;
            for(var key in data){
                if (key !== "service_type_id" && key !== "action") {
                    let displayKey = key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                    tbody.append('<tr>' +
                        '<td>' + displayKey + '</td>' +
                        '<td>' + data[key] + '</td>' +
                        '</tr>');
                }
            }

            $('#showModal').modal('show');
        });
    }

    function AddData() {
        $('#modalTitle').text("Add Service Type");
        $('#dataModal').modal('show');
        $('#saveForm')[0].reset();
        $('#service_type_id').val('');
    }

    function EditData(service_type_id) {
        $.get('@Url.Action("Get")', { service_type_id: service_type_id }, function(data) {
            $('#service_type_id').val(data.service_type_id);
            $('#name').val(data.name);
            $('#description').val(data.description);
            $('#modalTitle').text("Edit Service Type");
            $('#dataModal').modal('show');
        });
    }

    function DeleteData(service_type_id) {
        swal({
            title: "Confirmation",
            text: "Are you sure you want to delete this data?",
            icon: "warning",
            buttons: ["No", "Yes"],
            dangerMode: true
        }).then(function(isDelete){
            if(isDelete){
                $.post('@Url.Action("Delete")', { service_type_id: service_type_id }, function(status){
                    if(status == 'success'){
                        swal("Deleted!", "Service has been deleted.", "success");
                        reloadTable();
                    } else {
                        swal("Failed!", "Failed to delete: " + status, "error");
                    }
                });
            } else {
                swal("Cancelled", "Service deletion cancelled.", "info");
            }
        });
    }

    $('#saveForm').submit(function(e){
        e.preventDefault();
        var formData = {
            service_type_id: $('#service_type_id').val(),
            name: $('#name').val(),
            description: $('#description').val(),
        };

        swal({
            title: "Save Service?",
            text: "Are you sure you want to save this service?",
            icon: "info",
            buttons: ["No", "Yes"]
        }).then(function(isSave){
            if(isSave){
                $.post('@Url.Action("Store")', formData, function(status){
                    if(status == 'success'){
                        $('#dataModal').modal('hide');
                        swal("Saved!", "Service saved successfully.", "success");
                        reloadTable();
                    } else {
                        swal("Failed!", "Failed to save: " + status, "error");
                    }
                });
            } else {
                swal("Cancelled", "Save action cancelled.", "info");
            }
        });
    });
</script>