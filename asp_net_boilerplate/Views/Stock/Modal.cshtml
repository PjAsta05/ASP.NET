<div class="modal" id="dataModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="saveForm" method="POST">
            <input type="hidden" id="stock_id" name="stock_id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5><strong id="modalTitle">Add / Edit Stock</strong></h5>
                </div>
                <div class="modal-body">
                    <table class="table table-striped">
                        <tr>
                            <td>Name</td>
                            <td><input type="text" id="name" name="name" required style="width:100%;" /></td>
                        </tr>
                        <tr>
                            <td>Barcode</td>
                            <td><input type="text" id="barcode" name="barcode" required style="width:100%;" /></td>
                        </tr>
                        <tr>
                            <td>Category</td>
                            <td>
                                <select id="category_id" name="category_id" required style="width: 100%;">
                                    <option value="" disabled selected>-- Select Category --</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Sub Category</td>
                            <td>
                                <select id="sub_category_id" name="sub_category_id" required style="width: 100%;">
                                    <option value="" disabled selected>-- Select Category --</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Price</td>
                            <td><input type="number" id="price" name="price" required style="width:100%;" /></td>
                        </tr>
                        <tr>
                            <td>Notes</td>
                            <td><textarea id="notes" name="notes" rows="3" required style="width:100%; font-size:16px;"></textarea></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
